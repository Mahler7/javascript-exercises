#faqs {
  padding-left: 100px;
}

a {
  color: black;
  text-decoration: none;
}

a:focus, a:hover {
  color: blue;
}

h2 {
  cursor: pointer;
  background-image: url('/assets/images/plus.png') no-repeat left center;
}

h2.minus {
  background-image: url('/assets/images/minus.png') no-repeat left center;
}

div {
  display: none;
}

div.open {
  display: block;
}