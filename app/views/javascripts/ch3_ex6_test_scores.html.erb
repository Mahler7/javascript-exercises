<!-- Calculates averages for test scores using a while loop and an array and finds the highest score-->

<script>
  var entry;
  var average;
  var scores = [];
  var total = 0;
  var highestScore = 0;
  var show = "The test scores:\n";

  do {
    entry = prompt("Enter test score\n" +  "or enter 999 to end entries", 999);
    entry = parseInt(entry);
    if (entry >= 0 && entry <= 100) {
      scores[scores.length] = entry;
    }
    else if (entry != 999) {
      alert("Entry must be a valid number from 0 through 100\n" + "or enter 999 to end entries");
    }
  }

  while (entry != 999);

  for (var i = 0; i < scores.length; i++) {
    total = total + scores[i];
    show = show + scores[i] + "\n";
  }

  for (var i = 0; i < scores.length; i++) {
    if (scores[i] > highestScore) {
      highestScore = scores[i];
    }
  }

  average = parseInt(total/scores.length);
  alert(show + "\nAverage score is " + average + "\n" + show + "The highest score is " + highestScore);
</script>